<h1>Inbox</h1>

<table class="table">
	<thead class="thead thead-default">
		<tr>
			<th>Sender</th>
			<th>Title</th>
			<th>Body</th>
			<th>Show</th>
			<th>Reply</th>
		</tr>
	</thead>

	<tbody>
<% @messages.each do |message| %>
		<tr>
			<% @user_name = User.find_by(id: message.sender_id) %>
		 	<td><%= @user_name.name %></td>
		 	<td>
		 		<% if !message.send_time %>
		 			<b><%= message.title %></b>
		 		<% else %>
		 			<%= message.title %>
		 		<% end %>
		 	</td>
		 	<td><%= message.body %></td>
		 	<td><%= link_to "Show", message_path(message.id) %></td>
		 	<td><%= link_to "Reply", new_message_path(r_id: @user_name.id, s_id: session[:user_id])  %></td>
		 </tr>
<% end %>
	</tbody>

</table>