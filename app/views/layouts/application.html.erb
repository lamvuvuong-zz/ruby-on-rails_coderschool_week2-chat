<!DOCTYPE html>
<html>
<head>
  <title>CoderChat</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
	<%= link_to 'Home', root_path %>
	<% if current_user %>
		<div class="alert alert-info">
			Welcome <%= current_user.name %>
			<%= link_to "Log out", logout_path, method: 'delete' %>
			<%= link_to "Inbox", user_path(current_user.id) %>
			<%= link_to "Sent Mail", messages_path %>
			<%= link_to "Friend request", friendships_path %>
			<%= link_to "Friend", home_path(current_user.id) %>
			
		</div>
	<% else %>
		<%= link_to "Log in", new_session_path %>
	<% end %>
	<% if flash.any? %>
		<% flash.each do |key, value| %>
			<div class="alert <%= flash_class_name(key) %>">
				<%= value %>
			</div>
		<% end %>
	<% end %>
</div>
<div class="container">
	<%= yield %>
</div>
</body>
</html>
